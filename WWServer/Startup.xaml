<Window x:Class="WW.Startup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="WWServer" Height="164" Width="480" Name="StartupWindow" Loaded="StartupWindow_OnLoaded" Closed="StartupWindow_OnClosed">
    <Grid>
        <Label Name="AdapterLabel" Height="26" Margin="0,12,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">Adapter:</Label>
        <Label Name="PortLabel" Height="26" Margin="0,44,104,0" HorizontalAlignment="Right" VerticalAlignment="Top">#Port:</Label>
        <ComboBox Name="AdapterComboBox" Height="26" Margin="63,12,12,0" VerticalAlignment="Top" />
        <TextBox Name="PortTextBox" Width="86" Height="26" Margin="0,44,12,0" HorizontalAlignment="Right" VerticalAlignment="Top" MaxLines="1" MaxLength="5" />
        <Button Name="StartButton" Width="75" HorizontalAlignment="Right" Margin="0,88,104,0" Click="StartButton_OnClick" Height="23" VerticalAlignment="Top">Start</Button>
        <Button Name="StopButton" Width="75" HorizontalAlignment="Right" Margin="0,88,12,0" Click="StopButton_OnClick" Height="23" VerticalAlignment="Top">Stop</Button>
    </Grid>
</Window>

<Window x:Class="WW.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Login" Height="240" Width="240" WindowStyle="SingleBorderWindow" ResizeMode="NoResize">
    <Grid ShowGridLines="True">
        <Label Name="UserLabel" Height="24" Margin="12,20,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">User</Label>
        <Label Name="PasswordLabel" Height="24" Margin="12,80,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">Password</Label>
        <TextBox Margin="12,42,12,0" Name="UserBox" MaxLines="1" MaxLength="16" Height="24" VerticalAlignment="Top" FontFamily="Times New Roman" />
        <PasswordBox Margin="12,102,12,0" Name="PasswordBox" MaxLength="32" Height="24" VerticalAlignment="Top" FontFamily="Times New Roman" />
        <Button Name="LoginButton" Width="70" Height="24" Margin="30,0,0,20" HorizontalAlignment="Left" VerticalAlignment="Bottom">Login</Button>
        <Button Name="CancelButton" Width="70" Height="24" Margin="0,0,30,20" HorizontalAlignment="Right" VerticalAlignment="Bottom">Cancel</Button>
    </Grid>
</Window>
